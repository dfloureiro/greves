<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp">

            <TextView
                android:id="@+id/subwayName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="@string/porto_subway_title_text"
                android:textSize="16sp" />

            <Button
                android:id="@+id/a_line_button"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_below="@+id/subwayName"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/round_rectangle"
                android:clickable="false"
                android:text="A"
                android:textColor="@color/buttonTextColor"
                android:textSize="10sp"
                android:visibility="visible"
                tools:backgroundTint="@color/portoSubwayLineA"
                tools:ignore="HardcodedText,SmallSp" />

            <TextView
                android:id="@+id/a_line_text_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/a_line_button"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="@string/ok"
                android:textSize="12sp" />

            <Button
                android:id="@+id/b_line_button"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_below="@+id/a_line_button"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/round_rectangle"
                android:clickable="false"
                android:text="B"
                android:textColor="@color/buttonTextColor"
                android:textSize="10sp"
                android:visibility="visible"
                tools:backgroundTint="@color/portoSubwayLineB"
                tools:ignore="HardcodedText,SmallSp" />

            <TextView
                android:id="@+id/b_line_text_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/b_line_button"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="@string/ok"
                android:textSize="12sp" />

            <Button
                android:id="@+id/c_line_button"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_below="@+id/b_line_button"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/round_rectangle"
                android:clickable="false"
                android:text="C"
                android:textColor="@color/buttonTextColor"
                android:textSize="10sp"
                android:visibility="visible"
                tools:backgroundTint="@color/portoSubwayLineC"
                tools:ignore="HardcodedText,SmallSp" />

            <TextView
                android:id="@+id/c_line_text_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/c_line_button"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="@string/ok"
                android:textSize="12sp" />

            <Button
                android:id="@+id/d_line_button"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_below="@+id/c_line_button"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/round_rectangle"
                android:clickable="false"
                android:text="D"
                android:textColor="@color/buttonTextColor"
                android:textSize="10sp"
                android:visibility="visible"
                tools:backgroundTint="@color/portoSubwayLineD"
                tools:ignore="HardcodedText,SmallSp" />

            <TextView
                android:id="@+id/d_line_text_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/d_line_button"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="@string/ok"
                android:textSize="12sp" />

            <Button
                android:id="@+id/e_line_button"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_below="@+id/d_line_button"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/round_rectangle"
                android:clickable="false"
                android:text="E"
                android:textColor="@color/buttonTextColor"
                android:textSize="10sp"
                android:visibility="visible"
                tools:backgroundTint="@color/portoSubwayLineE"
                tools:ignore="HardcodedText,SmallSp" />

            <TextView
                android:id="@+id/e_line_text_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/e_line_button"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="@string/ok"
                android:textSize="12sp" />

            <Button
                android:id="@+id/f_line_button"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_below="@+id/e_line_button"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/round_rectangle"
                android:clickable="false"
                android:text="F"
                android:textColor="@color/buttonTextColor"
                android:textSize="10sp"
                android:visibility="visible"
                tools:backgroundTint="@color/portoSubwayLineF"
                tools:ignore="HardcodedText,SmallSp" />

            <TextView
                android:id="@+id/f_line_text_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/f_line_button"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="@string/ok"
                android:textSize="12sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>